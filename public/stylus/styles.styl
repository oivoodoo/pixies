border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments

border-shadow()
  -webkit-box-shadow arguments
  -moz-box-shadow arguments
  box-shadow arguments

control-rotate()
  -webkit-transform rotate(arguments)
  -moz-transform rotate(arguments)

transition()
  -webkit-transition arguments
  -moz-transition arguments

transform()
  -webkit-transform arguments
  -moz-transform arguments

html, body, div, span, h1, h2, h3, h4, h5, h6, p, blockquote, pre, a, font, img, ul, li
  margin 0
  padding 0
  border 0
  outline 0
  font-size 100%
  vertical-align baseline
  background trasparent
  line-height 1.4

html
  background url(/images/line_texture.png)

body
  font 12px Georgia, Verdana, Lucida Sans Unicode, sans-serif
  color #6F6F6F
  background: url(/images/transparent_gradient.png) repeat-x;
  h1
    font-size 50px
  p
    margin 15px 0
  a
    color #0A7BC1
    font-weight normal
    text-decoration none

input[type='text'], input[type='email'], textarea
  border-radius 5px
  border-shadow 0px 0px 5px rgba(0, 0, 0, 0.5)
  padding 7px 7px 3px 7px
  border 1px solid #666

button, input[type='button'], input[type='submit']
  background #EEE
  background -moz-linear-gradient(top, #EEE 0%, #CCC 100%)
  background -webkit-gradient(linear, 0% 0%, 0% 100%, from(#EEE), to(#CCC))
  border 1px solid #CCC
  border-bottom 1px solid #BBB
  -moz-border-radius 3px
  -webkit-border-radius 3px
  border-radius 3px
  color #333
  font-family "Lucida Grande", "Lucida Sans Unicode", "Lucida Sans", Geneva, Verdana, sans-serif
  font-size 11px
  font-weight bold
  line-height 1
  padding 8px 0
  text-align center
  text-shadow 0 1px 0 #EEE
  width 80px

button:hover, input[type='button']:hover, input[type='submit']:hover
  background #DDD
  background -moz-linear-gradient(top, #DDD 0%, #BBB 100%)
  background -webkit-gradient(linear, 0% 0%, 0% 100%, from(#DDD), to(#BBB))
  border 1px solid #BBB
  border-bottom 1px solid #999
  cursor pointer

label
  margin-bottom 5px
label, input, textarea
  display block

.clearer
  clear both

#page
  margin 0 auto
  padding 20px

#page_inner
  margin 0 auto
  width 820px

#container
  background #f2f2eb url(/images/textured_background.jpg)
  z-index 1000
  margin-top 15px
  padding 20px
  min-height 300px
  border-radius 5px
  border-shadow 0px 0px 10px rgba(0, 0, 0, 0.5)
  position relative

  .block
    margin-bottom 20px

  a.contact
    color #195D87
    &:hover
      background-color rgba(255, 97, 0, 1)
      cursor pointer
      color white
    padding 0 0.4em
    background rgba(255, 97, 0, .3)
    font-weight bold
    border-radius 5px
    transition all .2s ease-in-out
    &:hover, &:active, &:focus
      transform scale(1.1)
  h1
    text-shadow rgba(6, 6, 6, 0.597656) 1px 1px
    font-size 20px
    font-family OrbitronMed, 'Courier New', monospace;
    text-transform uppercase
    letter-spacing 1px
    margin-bottom 15px
  h2
    text-shadow rgba(6, 6, 6, 0.597656) 1px 1px
    font-size 16px
    font-family OrbitronMed, 'Courier New', monospace;
    text-transform uppercase
    letter-spacing 1px
    margin-bottom 10px
  #contacts
    input[type='text'], input[type='email']
      width 300px
      font-size 18px
    textarea
      width 350px
      height 150px
    .left
      width 368px
      float left
      margin-right 20px
    .right
      width 386px
      float left
#footer
  margin-top 10px
  margin-bottom 30px
  #icons
    float right
    a
      display block
      width 32px
      height 32px
      margin 0px
      background transparent url(/images/social.png)
    li
      margin 0
      padding 0
      float left
      list-style-type none
      a:hover, a:active, a:focus
        outline 0
      a strong
        display none
  #rss a
    background-position -5px -2px
    &:hover
      background-position -5px -36px
    &:active
      background-position -5px -69px
  #facebook a
    background-position -38px -2px
    &:hover
      background-position -38px -36px
    &:active
      background-position -38px -69px
  #followme a
    background-position -71px -2px
    &:hover
      background-position -71px -36px
    &:active
      background-position -71px -69px
  #email a
    background-position -104px -2px
    &:hover
      background-position -104px -36px
    &:active
      background-position -104px -69px

